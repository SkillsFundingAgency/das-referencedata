<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="SFA.DAS.ReferenceData.CloudService" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6" upgradeDomainCount="5">
  <WebRole name="SFA.DAS.ReferenceData.Api" vmsize="Standard_D2_v2">
    <Runtime executionContext="elevated" />
    <Startup>
      <Task commandLine="AppInit.cmd" executionContext="elevated" taskType="simple" />
    </Startup>
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="HttpsIn" endpointName="HttpsIn" />
        </Bindings>
      </Site>
    </Sites>
    <ConfigurationSettings>
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
      <Setting name="StorageConnectionString" />
      <Setting name="EnvironmentName" />
      <Setting name="ConfigurationStorageConnectionString" />
      <Setting name="LogLevel" />
      <Setting name="LoggingRedisKey" />
      <Setting name="LoggingRedisConnectionString" />
      <Setting name="idaAudience" />
      <Setting name="idaTenant" />
      <Setting name="InstrumentationKey" />
      <Setting name="RedisConnectionString" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="HttpsIn" protocol="https" port="443" certificate="WebSslCert" loadBalancer="das-prd-ref-ilb"/>
    </Endpoints>
    <Certificates>
      <Certificate name="WebSslCert" storeLocation="LocalMachine" storeName="My" />
    </Certificates>
  </WebRole>
</ServiceDefinition>